package com.minsait.fintech.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;

import io.swagger.v3.oas.models.Components;
import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Info;

@Configuration

public class OpenAPIConfig {
	 @Bean
	    public OpenAPI customOpenApi(){
	        return new OpenAPI()
	                .components(new Components())
	                .info(new Info().title("API usando Spring Boot")
	                        .description("Esta API REST fornece endpoints para acessar e manipular recursos relacionados a API . Ela segue o padr√£o RESTful e utiliza o formato JSON para a troca de dados."));
	    }

}
